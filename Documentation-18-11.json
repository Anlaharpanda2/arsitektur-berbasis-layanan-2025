            "GET /api/peminjaman/{id}",
            "POST /api/peminjaman",
            "PUT /api/peminjaman/{id}",
            "DELETE /api/peminjaman/{id}"
          ],
          "events": [
            "peminjaman.created",
            "peminjaman.updated",
            "peminjaman.returned"
          ],
          "docker": {
            "dockerfile": "Perpustakaan/Peminjaman/Dockerfile",
            "image": "peminjaman-service",
            "healthcheck": "/actuator/health"
          }
        },
        "api-gateway": {
          "port": 9001,
          "description": "API Gateway untuk Perpustakaan services",
          "technology": "Spring Cloud Gateway",
          "routes": [
            {
              "path": "/api/buku/**",
              "service": "buku-service"
            },
            {
              "path": "/api/anggota/**",
              "service": "anggota-service"
