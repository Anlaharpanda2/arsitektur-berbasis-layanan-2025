          "docker": {
            "dockerfile": "Perpustakaan/Pengembalian/Dockerfile",
            "image": "pengembalian-service",
            "healthcheck": "/actuator/health"
          }
        },
        "peminjaman-service": {
          "port": 8087,
          "description": "Service untuk manajemen peminjaman buku dengan RabbitMQ integration",
