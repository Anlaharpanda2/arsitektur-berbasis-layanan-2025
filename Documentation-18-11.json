  "domains": {
    "marketplace": {
      "description": "E-commerce domain untuk manajemen produk, pelanggan, dan order",
      "services": {
        "produk-service": {
          "port": 8081,
          "description": "Service untuk manajemen produk",
          "technology": "Spring Boot 3.5.5, Java 17",
          "database": "H2 (file-based)",
          "endpoints": [
            "GET /api/produk",
            "GET /api/produk/{id}",
            "POST /api/produk",
            "PUT /api/produk/{id}",
            "DELETE /api/produk/{id}"
          ],
          "docker": {
            "dockerfile": "Marketplace/Produk/Dockerfile",
            "image": "produk-service",
            "healthcheck": "/actuator/health"
          }
        },
        "pelanggan-service": {
          "port": 8082,
          "description": "Service untuk manajemen pelanggan",
          "technology": "Spring Boot 3.5.5, Java 17",
          "database": "H2 (file-based)",
          "endpoints": [
            "GET /api/pelanggan",
            "GET /api/pelanggan/{id}",
            "POST /api/pelanggan",
            "PUT /api/pelanggan/{id}",
            "DELETE /api/pelanggan/{id}"
          ],
          "docker": {
            "dockerfile": "Marketplace/Pelanggan/Dockerfile",
            "image": "pelanggan-service",
            "healthcheck": "/actuator/health"
          }
        },
        "order-service": {
          "port": 8083,
          "description": "Service untuk manajemen order",
          "technology": "Spring Boot 3.5.5, Java 17",
          "database": "H2 (file-based)",
          "dependencies": [
            "produk-service",
            "pelanggan-service"
          ],
          "endpoints": [
            "GET /api/order",
            "GET /api/order/{id}",
            "POST /api/order",
            "PUT /api/order/{id}",
            "DELETE /api/order/{id}"
          ],
          "docker": {
            "dockerfile": "Marketplace/Order/Dockerfile",
            "image": "order-service",
            "healthcheck": "/actuator/health"
          }
        },
        "api-gateway": {
          "port": 9000,
          "description": "API Gateway untuk Marketplace services",
          "technology": "Spring Cloud Gateway",
          "routes": [
            {
              "path": "/produk/**",
              "service": "produk-service"
            },
            {
              "path": "/pelanggan/**",
              "service": "pelanggan-service"
            },
            {
              "path": "/order/**",
              "service": "order-service"
            }
          ],
          "docker": {
            "dockerfile": "Marketplace/api-gateway/Dockerfile",
            "image": "marketplace-gateway"
          }
        }
      },
      "infrastructure": {
        "eureka": {
          "port": 8761,
          "url": "http://localhost:8761",
          "description": "Service discovery untuk Marketplace"
        },
        "rabbitmq": {
          "amqp_port": 5672,
          "management_port": 15672,
          "credentials": {
            "username": "admin",
            "password": "password"
          },
          "description": "Message broker untuk event-driven communication"
        }
      },
      "docker_compose": "Marketplace/docker-compose.yaml"
    },
    "generic_service": {
      "description": "CQRS (Command Query Responsibility Segregation) implementation dengan Event Sourcing",
      "pattern": "CQRS + Event Sourcing",
      "services": {
        "command-service": {
          "port": 8091,
          "description": "Write side - menangani semua operasi write (Create, Update, Delete)",
          "technology": "Spring Boot 3.5.5, Java 17",
          "database": "H2 (Event Store)",
          "responsibilities": [
            "Menerima command dari client",
            "Validasi business logic",
            "Menyimpan event ke event store",
            "Publish event ke RabbitMQ"
          ],
          "endpoints": [
            "POST /api/pelanggan",
            "PUT /api/pelanggan/{id}",
            "DELETE /api/pelanggan/{id}"
          ],
          "events": [
            "pelanggan.created",
            "pelanggan.updated",
            "pelanggan.deleted"
          ],
          "docker": {
            "dockerfile": "GenericService/command-service/Dockerfile",
            "image": "command-service",
            "healthcheck": "/actuator/health"
          }
        },
        "query-service": {
          "port": 8092,
          "description": "Read side - menangani semua operasi read (Query)",
          "technology": "Spring Boot 3.5.5, Java 17, MongoDB",
          "database": "MongoDB (Read Model)",
          "responsibilities": [
            "Consume event dari RabbitMQ",
            "Update read model di MongoDB",
            "Menyediakan optimized query endpoint"
          ],
          "endpoints": [
            "GET /api/pelanggan",
            "GET /api/pelanggan/{id}",
            "GET /api/pelanggan/search"
          ],
          "docker": {
            "dockerfile": "GenericService/query-service/Dockerfile",
            "image": "query-service",
            "healthcheck": "/actuator/health"
          }
        }
      },
      "infrastructure": {
        "eureka": {
          "port": 8761,
          "url": "http://localhost:8761",
          "description": "Service discovery untuk Generic services"
        },
        "rabbitmq": {
          "amqp_port": 5674,
          "management_port": 15674,
          "credentials": {
            "username": "guest",
            "password": "guest"
          },
          "exchange": "pelanggan-exchange",
          "queue": "pelanggan-projection-queue",
          "description": "Message broker untuk CQRS event communication"
        },
        "mongodb": {
          "port": 27017,
          "database": "pelanggan_readdb",
          "description": "NoSQL database untuk read model optimization"
        }
      },
      "docker_compose": "GenericService/docker-compose.yaml"
    },
